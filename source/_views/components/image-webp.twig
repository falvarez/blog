<figure>
    <picture>
        {% if srcWebp %}<source srcset="{{ srcWebp }}" type="image/webp">{% endif %}
        {% if srcGif %}<source srcset="{{ srcGif }}" type="image/gif">{% endif %}
        {% if srcPng %}<source srcset="{{ srcPng }}" type="image/png">{% endif %}
        {% if srcJpg %}<source srcset="{{ srcJpg }}" type="image/jpg">{% endif %}
        {% if srcFallback %}
            <img class="{{ position }}-block img-fluid lozad {% if additionalClasses %}{{ additionalClasses }}{% else %}w-100{% endif %}" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mP8z/C/HgAGgwJ/lK3Q6wAAAABJRU5ErkJggg==" data-src="{{ srcFallback }}" alt="{{ alt | escape('html_attr')}}">
        {% endif %}
    </picture>
    {% if caption %}
        <span class="figure-caption text-muted text-right">{{ caption | raw }}</span>
    {% else %}
        <span class="figure-caption text-muted text-right">{{ alt }}</span>
    {% endif %}
    <noscript><img class="{{ position }}-block img-fluid {% if additionalClasses %}{{ additionalClasses }}{% else %}w-100{% endif %}" src="{{ srcFallback }}" alt="{{ alt | escape('html_attr')}}"></noscript>
</figure>
